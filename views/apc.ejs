<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approved Complaints</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border-radius: 8px;
            overflow: hidden;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #007bff;
            color: #fff;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #ddd;
        }
        button {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <h1>Approved Complaints</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Complaint Type</th>
                <th>Complaint Message</th>
                <th>Reference ID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% complaints.forEach(complaint => { %>
                <tr>
                    <td><%= complaint.id %></td>
                    <td><%= complaint.complaintType %></td>
                    <td><%= complaint.complaintMessage %></td>
                    <td><%= complaint.referenceID %></td>
                    <td>
                        <form action="http://localhost:3000/apc/<%= complaint.referenceID %>" method="get">
                            <button type="submit">Approve</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>

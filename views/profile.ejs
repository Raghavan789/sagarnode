<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Profile Page</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <style>
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        background: linear-gradient(to right, #0056b3, #0082e6);
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .toppad {
        margin-top: 50px;
      }
      .panel-info {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.2);
        color: #333;
      }
      .panel-heading {
        background-color: #0056b3 !important;
        color: white !important;
        border-radius: 10px 10px 0 0;
      }
      .panel-title {
        font-size: 1.5em;
        text-align: center;
      }
      .img-circle {
        border-radius: 50%;
        border: 2px solid #0056b3;
      }
      .table-user-information {
        margin-top: 20px;
      }
      .table-user-information td {
        padding: 10px;
        font-size: 1.1em;
      }
      .alert-danger {
        background-color: #d9534f;
        border-color: #d43f3a;
        color: white;
        border-radius: 10px;
      }
      @media (max-width: 768px) {
        .toppad {
          margin-top: 20px;
        }
        .panel-title {
          font-size: 1.2em;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
          <% if (message.length > 0) { %>
            <div class="alert alert-danger col-sm-12"><%= message %></div>
          <% } else { %>
            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title"><%= data[0].first_name %> <%= data[0].last_name %></h3>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-md-3 col-lg-3" align="center">
                    <img alt="User Pic" src="http://localhost:3000/images/upload_images/<%= data[0].image %>" class="img-circle img-responsive">
                  </div>
                  <div class="col-md-9 col-lg-9">
                    <table class="table table-user-information">
                      <tbody>
                        <tr>
                          <td>Email:</td>
                          <td><%= data[0].email %></td>
                        </tr>
                        <tr>
                          <td>First Name:</td>
                          <td><%= data[0].first_name %></td>
                        </tr>
                        <tr>
                          <td>Last Name:</td>
                          <td><%= data[0].last_name %></td>
                        </tr>
                        <tr>
                          <td>Mobile Number:</td>
                          <td><%= data[0].mob_no %></td>
                        </tr>
                        <tr>
                          <td>Username:</td>
                          <td><%= data[0].user_name %></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
